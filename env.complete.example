# ===========================================
# CONFIGURAÇÃO COMPLETA DE VARIÁVEIS DE AMBIENTE
# ===========================================
# Copie este arquivo para .env.local e configure os valores

# ===========================================
# CONFIGURAÇÃO BÁSICA DO PROJETO
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# CONFIGURAÇÃO DO SUPABASE (OBRIGATÓRIO)
# ===========================================
# 1. Acesse: https://supabase.com/dashboard/project/[seu-projeto]/settings/api
# 2. Copie a Project URL e cole em NEXT_PUBLIC_SUPABASE_URL
# 3. Copie a anon/public key e cole em NEXT_PUBLIC_SUPABASE_ANON_KEY
# 4. Para SUPABASE_SERVICE_ROLE_KEY, use a service_role key (mantenha secreta)
# 5. Para SUPABASE_JWT_SECRET, use o JWT Secret do projeto
NEXT_PUBLIC_SUPABASE_URL=https://seu-projeto.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_JWT_SECRET=seu-jwt-secret-aqui

# ===========================================
# CONFIGURAÇÃO DO STRIPE (OBRIGATÓRIO PARA PAGAMENTOS)
# ===========================================
# 1. Acesse: https://dashboard.stripe.com/apikeys
# 2. Copie a Secret key e cole em STRIPE_SECRET_KEY
# 3. Copie a Publishable key e cole em NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY
# 4. Para webhook: https://dashboard.stripe.com/webhooks
STRIPE_SECRET_KEY=sk_test_51...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_51...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (crie produtos no Stripe Dashboard)
# 1. Acesse: https://dashboard.stripe.com/products
# 2. Crie produtos para Basic, Professional e Office
# 3. Copie os Price IDs gerados
STRIPE_BASIC_PRICE_ID=price_1...
STRIPE_PROFESSIONAL_PRICE_ID=price_1...
STRIPE_OFFICE_PRICE_ID=price_1...

# ===========================================
# CONFIGURAÇÃO DO GOOGLE OAUTH (OPCIONAL)
# ===========================================
# 1. Acesse: https://console.developers.google.com/
# 2. Crie um projeto ou selecione um existente
# 3. Ative a Google+ API
# 4. Crie credenciais OAuth 2.0
# 5. Configure URLs de redirecionamento: http://localhost:3000/auth/callback
GOOGLE_CLIENT_ID=seu-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=seu-google-client-secret

# ===========================================
# CONFIGURAÇÃO DE SEGURANÇA (OBRIGATÓRIO)
# ===========================================
# Gere uma chave JWT segura (mínimo 32 caracteres)
# Use: openssl rand -base64 32
JWT_SECRET=sua-chave-jwt-super-secreta-aqui-minimo-32-caracteres

# Configurações de Segurança (true/false)
ENABLE_ZERO_TRUST_AUTH=true
ENABLE_ENHANCED_SECURITY=true
ENABLE_ADVANCED_RATE_LIMITING=true
ENABLE_INPUT_VALIDATION=true
ENABLE_SECURITY_AUDIT=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DISTRIBUTED=false
RATE_LIMIT_REDIS_URL=redis://localhost:6379

# Security Headers
ENABLE_CSP=true
CSP_REPORT_ONLY=false
ENABLE_HSTS=true
HSTS_MAX_AGE=31536000

# Zero Trust Configuration
ZERO_TRUST_SESSION_TIMEOUT=30
ZERO_TRUST_MAX_CONCURRENT_SESSIONS=3
ZERO_TRUST_TRUST_SCORE_THRESHOLD=50
ZERO_TRUST_ENABLE_MFA=true
ZERO_TRUST_ENABLE_DEVICE_TRUST=true
ZERO_TRUST_ENABLE_LOCATION_VERIFICATION=true
ZERO_TRUST_ENABLE_BEHAVIORAL_ANALYSIS=true

# ===========================================
# CONFIGURAÇÃO DE VALIDAÇÃO DE DADOS
# ===========================================
DATA_VALIDATION_ENABLED=true
MAX_REQUEST_SIZE=10485760
ALLOWED_CONTENT_TYPES=application/json,application/x-www-form-urlencoded

# ===========================================
# CONFIGURAÇÃO DE CORS
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://contabilease.vercel.app,https://contabilease.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# ===========================================
# CONFIGURAÇÃO DE LOGGING E MONITORAMENTO
# ===========================================
LOG_LEVEL=debug
LOG_ENDPOINT=
LOG_API_KEY=
SECURITY_LOG_LEVEL=medium
EXTERNAL_LOGGING_ENABLED=false
LOG_RETENTION_HOURS=24

# Telemetria
TELEMETRY_ENDPOINT=
TELEMETRY_API_KEY=

# ===========================================
# CONFIGURAÇÃO DE MONITORAMENTO EXTERNO (OPCIONAL)
# ===========================================
# Sentry para monitoramento de erros
# 1. Acesse: https://sentry.io/
# 2. Crie um projeto
# 3. Copie o DSN
SENTRY_DSN=https://sua-chave@sentry.io/projeto

# Google Analytics
# 1. Acesse: https://analytics.google.com/
# 2. Crie uma propriedade
# 3. Copie o Measurement ID
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Datadog (opcional)
DATADOG_API_KEY=sua-chave-datadog

# ===========================================
# CONFIGURAÇÃO DE REDIS (OPCIONAL)
# ===========================================
# Para usar Redis em produção
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# CONFIGURAÇÃO DE UPLOAD DE ARQUIVOS
# ===========================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===========================================
# CONFIGURAÇÃO DE DESENVOLVIMENTO
# ===========================================
SECURITY_DEBUG=false
SECURITY_VERBOSE_LOGGING=false

# ===========================================
# CONFIGURAÇÃO DE BANCO DE DADOS (OPCIONAL)
# ===========================================
# Se usar banco externo além do Supabase
DATABASE_URL=postgresql://user:password@host:5432/database

