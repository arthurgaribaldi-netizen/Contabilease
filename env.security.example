# Security Configuration for Micro SaaS 2025
# Copy this file to .env.local and configure the values

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Security Features (true/false)
ENABLE_ZERO_TRUST_AUTH=true
ENABLE_ENHANCED_SECURITY=true
ENABLE_ADVANCED_RATE_LIMITING=true
ENABLE_INPUT_VALIDATION=true
ENABLE_SECURITY_AUDIT=true

# Rate Limiting Configuration
RATE_LIMIT_REDIS_URL=redis://localhost:6379
RATE_LIMIT_DISTRIBUTED=false

# Security Headers
ENABLE_CSP=true
CSP_REPORT_ONLY=false
ENABLE_HSTS=true
HSTS_MAX_AGE=31536000

# Audit and Logging
SECURITY_LOG_LEVEL=medium
EXTERNAL_LOGGING_ENABLED=false
LOG_RETENTION_HOURS=24

# Zero Trust Configuration
ZERO_TRUST_SESSION_TIMEOUT=30
ZERO_TRUST_MAX_CONCURRENT_SESSIONS=3
ZERO_TRUST_TRUST_SCORE_THRESHOLD=50
ZERO_TRUST_ENABLE_MFA=true
ZERO_TRUST_ENABLE_DEVICE_TRUST=true
ZERO_TRUST_ENABLE_LOCATION_VERIFICATION=true
ZERO_TRUST_ENABLE_BEHAVIORAL_ANALYSIS=true

# Input Validation
MAX_REQUEST_SIZE=10485760
ALLOWED_CONTENT_TYPES=application/json,application/x-www-form-urlencoded

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://contabilease.vercel.app,https://contabilease.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# External Security Services (Optional)
CLOUDFLARE_API_KEY=your-cloudflare-api-key
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# Development Overrides
NODE_ENV=development
SECURITY_DEBUG=false
SECURITY_VERBOSE_LOGGING=false
